{
  "name": "report-builder",
  "version": "1.0.0",
  "description": "Automated report processing system for hospitality management",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:integration": "vitest run --config vitest.integration.config.ts",
    "test:integration:watch": "vitest --config vitest.integration.config.ts",
    "test:integration:local": "SKIP_INTEGRATION_TESTS=false vitest run --config vitest.integration.config.ts",
    "test:integration:aws": "USE_REAL_AWS=true vitest run --config vitest.integration.config.ts",
    "test:all": "npm run test && npm run test:integration",
    "clean": "rm -rf dist coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --check src/**/*.ts",
    "pre-deploy": "./scripts/pre-deploy-check.sh",
    "deploy:dev": "./scripts/deploy.sh --environment development",
    "deploy:prod": "./scripts/deploy.sh --environment production",
    "rollback:dev": "./scripts/rollback.sh --environment development",
    "rollback:prod": "./scripts/rollback.sh --environment production"
  },
  "keywords": [
    "aws",
    "lambda",
    "ses",
    "s3",
    "serverless",
    "email-processing",
    "report-automation"
  ],
  "author": "Your Company",
  "license": "MIT",
  "dependencies": {
    "@aws-sdk/client-lambda": "^3.410.0",
    "@aws-sdk/client-s3": "^3.410.0",
    "@aws-sdk/client-ses": "^3.872.0",
    "@aws-sdk/client-ssm": "^3.410.0",
    "@types/aws-lambda": "^8.10.152",
    "mailparser": "^3.6.5"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@types/mailparser": "^3.4.6",
    "@types/node": "^20.5.0",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "@vitest/coverage-v8": "^3.2.4",
    "eslint": "^8.47.0",
    "prettier": "^3.0.2",
    "typescript": "^5.1.6",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-org/report-builder.git"
  },
  "bugs": {
    "url": "https://github.com/your-org/report-builder/issues"
  },
  "homepage": "https://github.com/your-org/report-builder#readme"
}
